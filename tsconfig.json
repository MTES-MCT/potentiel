{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "jsx": "react",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./"
  },
  "include": ["src/**/*", "src/__tests__/**/*", "scripts"],
  "exclude": ["node_modules", "features", "**/*.spec.ts", "**/*.integration.ts"]
}
