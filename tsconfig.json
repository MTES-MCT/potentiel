{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "packages/applications/web"
    },
    {
      "path": "packages/domain"
    },
    {
      "path": "packages/domain-views"
    },
    {
      "path": "packages/specifications"
    },
    {
      "path": "packages/libraries/core-domain"
    },
    {
      "path": "packages/libraries/monads"
    },
    {
      "path": "packages/libraries/monitoring"
    },
    {
      "path": "packages/libraries/pg-event-sourcing"
    },
    {
      "path": "packages/libraries/pg-helpers"
    },
    {
      "path": "packages/libraries/pg-projections"
    },
    {
      "path": "packages/libraries/redis-event-bus-client"
    },
    {
      "path": "packages/libraries/redis-event-bus-consumer"
    },
    {
      "path": "packages/libraries/file-storage"
    },
    {
      "path": "packages/libraries/infra-adapters"
    }
  ],
}