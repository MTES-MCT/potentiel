{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@modules/*": [
        "src/modules/*/index.ts"
      ],
      "@core/*": [
        "src/core/*/index.ts"
      ],
      "@entities": [
        "src/entities/index.ts"
      ],
      "@infra/*": [
        "src/infra/*/index.ts"
      ],
      "@useCases": [
        "src/useCases/index.ts"
      ],
      "@views": [
        "src/views/index.ts"
      ],
      "@views/*": [
        "src/views/*/index.ts"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
