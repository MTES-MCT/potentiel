{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
