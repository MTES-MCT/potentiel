{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "prettier"
  ],
  // Prevent ESLint from yelling at chai assertions (e.g : expect(undefined).to.be.undefined)
  "overrides": [
    {
      "files": ["cypress/**/*.js"],
      "rules": {
        "no-unused-expressions": "off"
      }
    },
    {
      "files": ["src/config/**/*.ts}"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {}
}
