{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/migrations",
    "sourceMap": false,
    "inlineSourceMap": true
  },
  "include": [
    "src/sequelize.config.ts",
    "src/infra/sequelize/migrations/*.js",
    "src/infra/sequelize/migrations/*.ts",
    "src/infra/sequelize/seeds/*.js",
    "src/infra/sequelize/seeds/*.ts",
  ],
  "exclude": [
    "node_modules",
    "features",
    "**/*.spec.ts",
    "**/*.integration.ts",
    "**/*.stories.tsx",
    "**/__tests__/**/*",
    "scripts"
  ]
}