{
  "extends": "next/core-web-vitals",
  "rules": {
    "import/no-unassigned-import": "off",
    "react/no-unescaped-entities": "off",
    "import/order": [
      "error", {
        "newlines-between": "always",
        "pathGroupsExcludedImportTypes": ["builtin"],
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "index"
        ],
        "pathGroups": [
          {
            "pattern": "@potentiel-*/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/**",
            "group": "parent",
            "position": "before"
          }
        ]
      }
    ]
  }
}