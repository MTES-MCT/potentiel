{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../domain-inmemory-referential"
    },
    {
      "path": "../../libraries/monitoring"
    },
    {
      "path": "../../infrastructure/pg-event-sourcing"
    },
    {
      "path": "../../libraries/routes"
    }
  ],
}