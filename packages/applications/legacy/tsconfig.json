{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    // remove all tests & stories, for NCC to compile successfully
    "**/*.spec.ts",
    "**/*.integration.ts",
    "**/__tests__/*",
    "**/*.stories.ts"
  ],
  "references": [
    {
      "path": "../../domain/inmemory-referential"
    },
    {
      "path": "../../libraries/monitoring"
    },
    {
      "path": "../../infrastructure/pg-event-sourcing"
    },
    {
      "path": "../routes"
    },
    {
      "path": "../bootstrap"
    },
    {
      "path": "../../domain/common"
    },
    {
      "path": "../../domain/lauréat"
    },
    {
      "path": "../../domain/réseau"
    }
  ]
}
