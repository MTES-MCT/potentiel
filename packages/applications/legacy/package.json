{
  "name": "@potentiel-application/legacy",
  "version": "0.0.0",
  "description": "Suivi des Projets d'Energies Renouvelables",
  "main": "index.js",
  "scripts": {
    "type:check": "tsc --noEmit",
    "build": "npm run build:front && npm run build:css && npm run build:back && npm run build:migrations",
    "build:back": "tsc --build tsconfig.build.json && cp -R src/public dist/src && cp -R src/views/template dist/src/views",
    "build:css": "tailwindcss -i ./src/views/index.css -o ./src/public/css/index.css",
    "build:front": "webpack --config=webpack.config.js",
    "build:migrate": "rimraf dist/migrations && tsc --build tsconfig.migrations.json",
    "premigrate": "npm run build:migrate",
    "migrate": "sequelize-cli db:migrate",
    "premigrate:undo": "npm run build:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "preseed": "npm run build:migrate",
    "seed": "sequelize-cli db:seed:all",
    "lint": "eslint ./src --ext .ts,.tsx",
    "format": "prettier './src/**/*.{ts,tsx,css}' --write",
    "test": "export APPLICATION_STAGE=test && npm run migrate && jest --config=jest.config.js --detectOpenHandles"
  },
  "dependencies": {
    "@hqoss/monads": "^0.5.0",
    "@json2csv/plainjs": "^6.1.3",
    "aws-sdk": "^2.1450.0",
    "cookie-parser": "^1.4.6",
    "connect-session-sequelize": "^7.1.7",
    "csv-parse": "^5.5.0",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.17.3",
    "helmet": "^6.2.0",
    "isemail": "^3.2.0",
    "ioredis": "^4.28.5",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.2",
    "keycloak-connect": "^23.0.4",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "neverthrow": "^6.0.0",
    "react-icons": "^4.11.0",
    "runtypes": "^6.7.0",
    "sanitize-filename": "^1.6.3",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.1",
    "utility-types": "^3.10.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@jest/globals": "^29.6.4",
    "@types/ioredis": "^4.28.10",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.7",
    "esbuild-loader": "^2.21.0",
    "jest": "^29.6.4",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "wait-for-expect": "^3.0.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.10.0"
  }
}