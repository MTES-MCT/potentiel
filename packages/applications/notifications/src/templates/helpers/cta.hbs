<div
  style="font-size:0px; padding:10px 25px; word-break:break-word"
  align="center"
>
  <table
    border="0"
    cellpadding="0"
    cellspacing="0"
    style="border-collapse:separate; line-height:100%"
  >
    <tbody>
      <tr>
        <td
          align="center"
          bgcolor="#000091"
          valign="middle"
          style="border:none; border-radius:3px; background:#000091"
        >
          <a
            href="{{url}}"
            target="_blank"
            rel="noopener noreferrer"
            style="display:inline-block; background:#000091; color:#ffffff; font-family:Arial,sans-serif; font-size:14px; font-weight:normal; line-height:120%; margin:0; text-decoration:none; text-transform:none; padding:10px 25px; border-radius:3px"
          >
            <span
              style="font-size: 14px; font-family: Arial, sans-serif, serif, &quot;EmojiFont&quot;;"
            >
              <b>{{text}}</b>
            </span>
          </a>
        </td>
      </tr>
    </tbody>
  </table>
</div>