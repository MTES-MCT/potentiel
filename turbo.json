{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["package.json"],
  "tasks": {
    "build": {
      "inputs": ["src/**/*.{ts,tsx,tsp,md,hbs,html}", "!src/**/*.d.ts"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "src/**/*.d.ts"],
      "dependsOn": ["^build:dev", "^build"],
      "outputLogs": "new-only"
    },
    "build:dev": {
      "inputs": ["src/**/*.{ts,tsx,tsp,md,hbs,html}", "!src/**/*.d.ts"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "src/**/*.d.ts"],
      "dependsOn": ["^build:dev"],
      "outputLogs": "new-only"
    },
    "build:test": {
      "inputs": ["src/**/*.{ts,tsx,tsp,md,hbs,html}", "!src/**/*.d.ts"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "src/**/*.d.ts"],
      "dependsOn": ["^build:test"],
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build:dev"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build:test"],
      "cache": false
    },
    "specs": {
      "dependsOn": ["^build:test"],
      "cache": false
    },
    "specs:select": {
      "dependsOn": ["^build:test"],
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV"]
}
