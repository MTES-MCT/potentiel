{
  "name": "potentiel-monorepo",
  "version": "0.0.0",
  "description": "Monorepo du projet potentiel",
  "workspaces": [
    "./packages/config/*",
    "./packages/libraries/*",
    "./packages/domain/core",
    "./packages/domain/common",
    "./packages/domain/utilisateur",
    "./packages/domain/document",
    "./packages/domain/candidature",
    "./packages/domain/appel-offre",
    "./packages/domain/inmemory-referential/",
    "./packages/domain/*",
    "./packages/infrastructure/*",
    "./packages/applications/routes",
    "./packages/applications/bootstrap",
    "./packages/applications/feature-flags/",
    "./packages/applications/scheduled-tasks",
    "./packages/applications/notifications",
    "./packages/applications/projectors",
    "./packages/applications/ssr",
    "./packages/applications/legacy",
    "./packages/specifications"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "npm run start --workspaces --if-present ",
    "up": "docker compose --profile app up -d && until docker exec potentiel_db pg_isready -U potadmindb -d potentiel; do sleep 1; done ",
    "down": "docker compose  --profile app down --remove-orphans",
    "prestart:legacy": "npm run build & npm run up",
    "start:legacy": "npm run start:dev --workspaces --if-present ",
    "build": "turbo run build",
    "build:dev": "turbo run build --filter=!@potentiel-applications/legacy --filter=!@potentiel-applications/ssr --filter=!@potentiel/specifications",
    "build:test": "turbo run build --filter=!@potentiel-applications/legacy --filter=!@potentiel-applications/ssr",
    "predev": "npm run up && npm run build:dev",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "storybook": "npm run storybook build --workspaces --if-present",
    "up:test": "docker compose --profile test up -d && until docker exec potentiel_db_tests_integration pg_isready -U testuser -d potentiel_test; do sleep 1; done",
    "down:test": "export COMPOSE_PROJECT_NAME=potentiel_tests && docker compose --profile test down --remove-orphans",
    "pretest": "npm run build:test && npm run down:test && npm run up:test",
    "pretest:legacy": "npm run pretest",
    "test:legacy": "turbo run test --filter=@potentiel-applications/legacy",
    "pretest:libraries": "npm run pretest",
    "test:libraries": "turbo run test --filter=!@potentiel-applications/legacy --filter=!@potentiel-applications/legacy",
    "prespecs": "npm run pretest",
    "specs": "npm run test -w @potentiel/specifications",
    "prespecs:select": "npm run pretest",
    "specs:select": "npm run test:select -w @potentiel/specifications",
    "version": "ts-node .github/getPatchVersion.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MTES-MCT/potentiel.git"
  },
  "author": "L'Ã©quipe Potentiel <team@potentiel.beta.gouv.fr> (https://potentiel.beta.gouv.fr/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/MTES-MCT/potentiel/issues"
  },
  "homepage": "https://github.com/MTES-MCT/potentiel#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "esbuild": "0.20.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-storybook": "^0.6.14",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "pretty-format": "^29.6.3",
    "ts-node": "^10.9.2",
    "turbo": "^1.13.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "dependencies": {
    "ts-pattern": "^5.1.1"
  }
}