{
  "name": "potentiel-monorepo",
  "version": "0.0.0",
  "sideEffects": false,
  "description": "Monorepo du projet potentiel",
  "workspaces": [
    "./packages/libraries/tsconfig/",
    "./packages/libraries/monads/",
    "./packages/domain/core",
    "./packages/domain/entity",
    "./packages/libraries/keycloak-cjs/",
    "./packages/libraries/monitoring/",
    "./packages/libraries/pg-helpers/",
    "./packages/libraries/pg-event-sourcing/",
    "./packages/libraries/file-storage/",
    "./packages/libraries/email-sender/",
    "./packages/libraries/routes",
    "./packages/domain/common",
    "./packages/domain/utilisateur",
    "./packages/domain/document",
    "./packages/domain/candidature",
    "./packages/domain/appel-offre",
    "./packages/domain/lauréat",
    "./packages/domain/réseau",
    "./packages/domain/tâche",
    "./packages/domain-inmemory-referential/",
    "./packages/infrastructure/pg-event-sourcing",
    "./packages/infrastructure/pg-projections",
    "./packages/infrastructure/document-builder",
    "./packages/infrastructure/domain-adapters",
    "./packages/infrastructure/notifications",
    "./packages/infrastructure/scheduled-tasks",
    "./packages/infrastructure/projectors",
    "./packages/applications/bootstrap",
    "./packages/applications/ssr",
    "./packages/applications/legacy",
    "./packages/specifications"
  ],
  "scripts": {
    "start": "npm run start --workspaces --if-present ",
    "start:dev": "docker compose --profile app up -d && until docker exec potentiel_db pg_isready -U potadmindb -d potentiel; do sleep 1; done && npm run start:dev --workspaces --if-present ",
    "stop:dev": "docker compose  --profile app down --remove-orphans",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "storybook": "npm run storybook build --workspaces --if-present",
    "test": "export COMPOSE_PROJECT_NAME=potentiel_tests && docker compose --profile test down --remove-orphans && docker compose --profile test up -d && until docker exec potentiel_db_tests_integration pg_isready -U testuser -d potentiel_test; do sleep 1; done && npm run test --workspaces --if-present",
    "version": "ts-node .github/getPatchVersion.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MTES-MCT/potentiel.git"
  },
  "author": "L'équipe Potentiel <team@potentiel.beta.gouv.fr> (https://potentiel.beta.gouv.fr/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/MTES-MCT/potentiel/issues"
  },
  "homepage": "https://github.com/MTES-MCT/potentiel#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-storybook": "^0.6.14",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "pretty-format": "^29.6.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^20.0.0"
  }
}