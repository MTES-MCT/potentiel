{
  "name": "potentiel-monorepo",
  "description": "Monorepo du projet potentiel",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "start": "nf start --procfile Procfile --port 3000",
    "start:web": "pnpm run --filter=@potentiel-applications/ssr start",
    "start:subscribers": "pnpm run --filter=@potentiel-applications/subscribers start ",
    "up": "./.scripts/docker-up.sh",
    "down": "./.scripts/docker-down.sh",
    "up:test": "./.scripts/docker-up-test.sh",
    "down:test": "./.scripts/docker-down-test.sh",
    "build": "turbo run build",
    "build:dev": "turbo run build --filter=@potentiel-applications/subscribers",
    "build:cli": "turbo run build --filter=@potentiel/cli...",
    "build:test": "turbo run build --filter=!@potentiel-applications/ssr",
    "clean": "turbo run clean && rm -rf .turbo",
    "predev": "pnpm run up && pnpm run build:dev",
    "dev": "nf start --procfile Procfile.dev --port 3000",
    "dev:web": "turbo run --filter=@potentiel-applications/ssr dev ",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier 'packages/**/src/**/*.{ts,feature}' --write",
    "storybook:documents": "pnpm run --filter=@potentiel-applications/document-builder storybook build",
    "db:restart": "docker stop potentiel_db && docker rm potentiel_db && pnpm run up",
    "pretest": "pnpm run down:test && pnpm run up:test && pnpm run build:test",
    "pretest:libraries": "pnpm run pretest",
    "test:libraries": "turbo run test --filter=@potentiel-domain/* --filter=@potentiel-libraries/* --filter=@potentiel-infrastructure/*",
    "pretest:apps": "pnpm run pretest",
    "test:apps": "turbo run test --filter=@potentiel-applications/*",
    "prespecs": "pnpm run pretest",
    "specs": "pnpm run --filter=@potentiel/specifications test ",
    "prespecs:select": "pnpm run pretest",
    "specs:select": "pnpm run --filter@potentiel/specifications test:select",
    "update:dump": "./.database/scripts/update-potentiel-dump.sh",
    "update:dump-metabase": "./.database/scripts/update-metabase-dump.sh",
    "update:ts-references": "update-ts-references"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MTES-MCT/potentiel.git"
  },
  "author": "L'Ã©quipe Potentiel <team@potentiel.beta.gouv.fr> (https://potentiel.beta.gouv.fr/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/MTES-MCT/potentiel/issues"
  },
  "homepage": "https://github.com/MTES-MCT/potentiel#readme",
  "devDependencies": {
    "@eslint/compat": "1.1.0",
    "@eslint/js": "8.57.0",
    "@faker-js/faker": "9.6.0",
    "@next/eslint-plugin-next": "16.0.3",
    "@types/chai": "4.3.20",
    "@types/node": "20.17.30",
    "chai": "4.5.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-monorepo-cop": "1.0.2",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-storybook": "0.8.0",
    "eslint-plugin-unused-imports": "4.3.0",
    "foreman": "3.0.1",
    "gitmoji-cli": "9.7.0",
    "globals": "15.15.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.6.2",
    "tsx": "catalog:",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3",
    "update-ts-references": "^4.0.0",
    "wait-for-expect": "3.0.2"
  },
  "dependencies": {
    "isomorphic-dompurify": "2.23.0",
    "prettier-plugin-gherkin": "2.4.1",
    "ts-pattern": "5.7.0"
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": "^24.10.0"
  },
  "gitmoji": {
    "autoAdd": false,
    "emojiFormat": "emoji",
    "scopePrompt": false,
    "messagePrompt": false,
    "capitalizeTitle": true,
    "gitmojisUrl": "https://gitmoji.dev/api/gitmojis"
  }
}
