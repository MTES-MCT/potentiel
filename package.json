{
  "name": "potentiel-monorepo",
  "description": "Monorepo du projet potentiel",
  "workspaces": [
    "./packages/config/*",
    "./packages/libraries/*",
    "./packages/domain/*",
    "./packages/infrastructure/*",
    "./packages/statistiques/*",
    "./packages/applications/*",
    "./packages/specifications"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "start": "npx --offline foreman start --procfile Procfile --port 3000",
    "start:web": "npm run start -w @potentiel-applications/legacy",
    "start:subscribers": "npm run start -w @potentiel-applications/subscribers",
    "up": "./.docker-scripts/up.sh",
    "down": "./.docker-scripts/down.sh",
    "prestart:legacy": "npm run build && npm run up",
    "start:legacy": "npm run start -w @potentiel-applications/legacy",
    "build": "turbo run build",
    "build:dev": "turbo run build --filter=@potentiel-applications/subscribers",
    "build:cli": "turbo run build --filter=@potentiel/cli...",
    "build:test": "turbo run build --filter=@potentiel-applications/ssr^...",
    "clean": "turbo run clean && rm -rf .turbo",
    "predev": "npm run up && npm run build:dev",
    "dev": "npx --offline foreman start --procfile Procfile.dev --port 3000",
    "dev:web": "npm run dev -w @potentiel-applications/ssr",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "npm run format --workspaces --if-present",
    "storybook:documents": "npm run storybook build -w @potentiel-applications/document-builder",
    "up:test": "./.docker-scripts/up-test.sh",
    "down:test": "./.docker-scripts/down-test.sh",
    "db:restart": "docker stop potentiel_db && docker rm potentiel_db && npm run up",
    "pretest": "npm run down:test && npm run up:test && npm run build:test",
    "test:libraries": "npm run pretest && turbo run test --filter=@potentiel-domain/* --filter=@potentiel-libraries/* --filter=@potentiel-infrastructure/*",
    "test:apps": "npm run pretest && turbo run test --filter=@potentiel-applications/*",
    "prespecs": "npm run pretest && turbo run build --filter=@potentiel/specifications",
    "specs": "npm run prespecs && npm run test -w @potentiel/specifications -- ",
    "specs:select": "npm run prespecs && npm run test:select -w @potentiel/specifications",
    "update:dump": "./.database/scripts/update-potentiel-dump.sh",
    "update:dump-metabase": "./.database/scripts/update-metabase-dump.sh",
    "update:ts-references": "update-ts-references"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MTES-MCT/potentiel.git"
  },
  "author": "L'Ã©quipe Potentiel <team@potentiel.beta.gouv.fr> (https://potentiel.beta.gouv.fr/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/MTES-MCT/potentiel/issues"
  },
  "homepage": "https://github.com/MTES-MCT/potentiel#readme",
  "devDependencies": {
    "@eslint/compat": "1.1.0",
    "@eslint/js": "8.57.0",
    "@faker-js/faker": "9.6.0",
    "@next/eslint-plugin-next": "16.0.3",
    "@types/chai": "4.3.20",
    "chai": "4.5.0",
    "esbuild": "0.27.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-monorepo-cop": "1.0.2",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-storybook": "0.8.0",
    "eslint-plugin-unused-imports": "4.3.0",
    "foreman": "3.0.1",
    "gitmoji-cli": "9.7.0",
    "globals": "15.15.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.6.2",
    "tsx": "4.20.4",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3",
    "update-ts-references": "^4.0.0",
    "wait-for-expect": "3.0.2"
  },
  "engines": {
    "node": "^24.10.0"
  },
  "dependencies": {
    "isomorphic-dompurify": "2.23.0",
    "prettier-plugin-gherkin": "2.4.1",
    "ts-pattern": "5.7.0"
  },
  "packageManager": "npm@10.7.0",
  "gitmoji": {
    "autoAdd": false,
    "emojiFormat": "emoji",
    "scopePrompt": false,
    "messagePrompt": false,
    "capitalizeTitle": true,
    "gitmojisUrl": "https://gitmoji.dev/api/gitmojis"
  }
}
